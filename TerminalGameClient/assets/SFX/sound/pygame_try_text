def cambiar_musica(ruta_musica):
    # Detener la música actual
    pygame.mixer.music.stop()
    # Cargar la nueva música
    pygame.mixer.music.load(ruta_musica)
    # Reproducir la nueva música (loops=-1 para repetir indefinidamente)
    pygame.mixer.music.play(loops=-1)
    # Simulación de cambio de sección


seccion_actual= 'seccion1'              # Esto se actualizará según la lógica del juego

if seccion_actual == 'seccion1':
    cambiar_musica(mMenu)
elif seccion_actual == 'seccion2':
    cambiar_musica(mTienda)
elif seccion_actual == 'seccion3':
    cambiar_musica(mMochila)
elif seccion_actual == 'seccion4':
    cambiar_musica(mResultado)
elif seccion_actual == 'seccion5':
    cambiar_musica(mIntro)

# Mantén el juego corriendo para escuchar la música
corriendo = True
while corriendo:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            corriendo = False
    time.sleep(0.1)  # Pausa

