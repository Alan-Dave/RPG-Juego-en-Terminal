"""
pygame.init()
pygame.mixer.init()

# Configuración de la ventana
ancho = 400
alto = 300
pantalla = pygame.display.set_mode((ancho, alto))
pygame.display.set_caption("Interfaz Gráfica con Sonidos Simultáneos")

# Cargar sonidos
Shuriken = pygame.mixer.Sound('C:/Windows/Media/Sonidos para VIsualStudio/Shuriken.wav')
Cortedimensional = pygame.mixer.Sound('C:/Windows/Media/Sonidos para VIsualStudio/CorteDimensional.wav')
Paralizar = pygame.mixer.Sound('C:/Windows/Media/Sonidos para VIsualStudio/Paralizar.wav')
Punch = pygame.mixer.Sound('C:/Windows/Media/Sonidos para VIsualStudio/Punch.wav')
Atacar = pygame.mixer.Sound('C:/Windows/Media/Sonidos para VIsualStudio/Atacar.wav')

# Función para reproducir sonidos
def reproducir_sonidos():
    Shuriken.play()
    Atacar.play()
    Paralizar.play()
    Cortedimensional.play()
    Punch.play()

# Bucle principal del juego
corriendo = True
while corriendo:
    for evento in pygame.event.get():
        if evento.type == pygame.QUIT:
            corriendo = False
        elif evento.type == pygame.KEYDOWN:
            if evento.key == pygame.K_SPACE:  # Reproducir sonidos al presionar la barra espaciadora
                reproducir_sonidos()

    # Limpiar la pantalla
    pantalla.fill((255, 255, 255))

    # Dibujar texto en la pantalla
    fuente = pygame.font.Font(None, 36)
    texto = fuente.render("Presiona la barra espaciadora para reproducir sonidos", True, (0, 0, 0))
    pantalla.blit(texto, (10, alto // 2))

    # Actualizar pantalla
    pygame.display.flip()

# Finalizar Pygame
pygame.quit()
sys.exit()

